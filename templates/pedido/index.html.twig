                        <input type="text" id="cvv" name="cvv" class="form-control" required>
                    </div> #}
                <button class="btn btn-primary mt-3">Comprar</button>
            {{ form_end(form) }}
            

            <a href="{{ path('listarProductos') }}" class="btn btn-secondary my-3">Volver a la lista de productos</a>
        </div>
    </div>
</div>
</div>
