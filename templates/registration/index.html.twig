{% extends 'baseLogReg.html.twig' %}

{% block title %}Registro Vintange{% endblock %}

{% block stylesheets %}
		<link rel="stylesheet" href="styles/registro.css">
{% endblock %}

{% block body %}
    <div class="registro_container">
        <h2 class="registro_title">REGISTRARSE</h2>
        {{ form_start(registration_form) }}
            <div class="mb-3">
                {{ form_label(registration_form.email) }}
                {{ form_widget(registration_form.email) }}
            </div>
            <div class="mb-3">
                {{ form_label(registration_form.password) }}
                {{ form_widget(registration_form.password) }}
            </div>
            <div class="mb-3">
                {{ form_label(registration_form.nombre) }}
                {{ form_widget(registration_form.nombre) }}
            </div>
            <div class="mb-3">
                {{ form_label(registration_form.apellidos) }}
                {{ form_widget(registration_form.apellidos) }}
            </div>
            <div class="mb-3">
                {{ form_label(registration_form.telefono) }}
                {{ form_widget(registration_form.telefono) }}
            </div>
            <p class="text-center">
                <a href="{{ path('login') }}">¿Ya tienes cuenta? Inicia sesión aquí.</a>
            </p>
            <p class="text-center">
                <a href="{{ path('listarProductos') }}">Volver a la página principal</a>
            </p>
            <div class="d-flex justify-content-center">
                {{ form_widget(registration_form.registrarse) }}
            </div>
        {{ form_end(registration_form) }}
    </div>
{% endblock %}
