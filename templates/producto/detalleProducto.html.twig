{% extends 'base.html.twig' %}

{% block title %}Detalle del Producto{% endblock %}


{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <img src={{ asset('uploads/fotosProductos/' ~ producto.foto) }} class="img-fluid rounded" alt="{{ producto.nombre }}">
        </div>
        <div class="col-md-6 " style="background-color: white">
            <h1 class="display-4">{{ producto.nombre }}</h1>
            <p class="lead">{{ producto.descripcion }}</p>
            <h3 class="text-primary">Precio: ${{ producto.precio }}</h3>
            <a href="{{ path('listarProductos') }}" class="btn btn-secondary my-3">Volver a la lista de productos</a>
        </div>
    </div>
</div>
{% endblock %}

